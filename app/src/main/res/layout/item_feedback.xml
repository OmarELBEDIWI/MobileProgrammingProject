<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Label: Difficulty -->
        <TextView
            android:id="@+id/tvDifficultyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty:"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Difficulty Value -->
        <TextView
            android:id="@+id/tvDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvDifficultyLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Label: Learning Experience -->
        <TextView
            android:id="@+id/tvLearningExperienceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learning Experience:"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvDifficulty"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Learning Experience Value -->
        <TextView
            android:id="@+id/tvLearningExperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvLearningExperienceLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Label: Name (Anonymous/Not) -->
        <TextView
            android:id="@+id/tvAnonymousLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvLearningExperience"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Anonymous/Not Value -->
        <TextView
            android:id="@+id/tvAnonymous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anonymous"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvAnonymousLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Label: Student Feedback -->
        <TextView
            android:id="@+id/tvStudentFeedbackLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Feedback:"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvAnonymous"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Student Feedback -->
        <TextView
            android:id="@+id/tvComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(feedback content here)"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvStudentFeedbackLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Label: Instructor Response -->
        <TextView
            android:id="@+id/tvInstructorResponseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructor Response:"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvComment"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Instructor Response -->
        <TextView
            android:id="@+id/tvInstructorResponse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(response content here)"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvInstructorResponseLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
